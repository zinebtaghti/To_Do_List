<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_item_background"
    android:elevation="4dp"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Circular Checkbox -->
    <CheckBox
        android:id="@+id/taskCompleted"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:buttonTint="@color/checkbox_color" />

    <!-- Task Title -->
    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Buy cat food"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Calendar Icon -->
    <ImageView
        android:id="@+id/taskDueDateIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Due Date Icon"
        android:src="@drawable/baseline_calendar_month_24" />

    <!-- Due Date -->
    <TextView
        android:id="@+id/taskDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/17/18"
        android:textColor="#9DBAD5"
        android:textSize="12sp" />
</LinearLayout>
